    <div class="container">    
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
            <div class="panel panel-info" >
                    <div class="panel-heading">
                        <div class="panel-title">Sign In</div>
                        <div style="float:right; font-size: 80%; position: relative; top:-10px"><%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                              <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
                              <% end -%>
                        </div>
                    </div>     

                    <div style="padding-top:30px" class="panel-body" >

                        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                         <%= form_for(resource, class: "form-horizontal", as: resource_name, url: session_path(resource_name)) do |f| %>  
                                    
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        
                                        <%= f.email_field :email, class: 'form-control',placeholder: "Email", autofocus: true %>                                        
                                    </div>
                                
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        
                                        <%= f.password_field :password, class: 'form-control', placeholder: 'Password', autocomplete: "off" %>
                                    </div>
                                    

                                
                            <div class="input-group">
                                      <div class="checkbox">
                                        <label>
                                          <% if devise_mapping.rememberable? -%>
                                              <%= f.check_box :remember_me %> Remember me
                                          <% end -%>
                                          
                                        </label>
                                      </div>
                                    </div>


                                <div style="margin-top:10px" class="form-group">
                                    <!-- Button -->

                                    <div class="col-sm-12 controls">
                                      
                                      <%= f.submit "Log in" , class: 'btn btn-success'%>
                                        
                                      <a id="btn-fblogin" href="#" class="btn btn-primary">Login with Facebook</a>

                                    </div>
                                </div>


                                <div class="form-group">
                                    <div class="col-md-12 control">
                                        <div style="padding-top:15px; font-size:85%" >
                                            Don't have an account! 
                                        <%= link_to "Sign Up Here", new_user_registration_path, class: "active" %>
                                        </div>
                                    </div>
                                </div>    
                               
<% end %>


                        </div>                     
                    </div>  
        </div>
    </div>
        
        
    



