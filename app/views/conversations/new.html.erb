<h1> New Conversation </h1>

<%= form_tag conversations_path, method: :post do %>
	<div>
		recipient: <%= select_tag :user_id, options_from_collection_for_select(@recipients, :id, :email) %>
	</div>

	<div>
		Subject: <%= text_field_tag :subject, nil, placeholder: "Subject" %>
	</div>

	<div>
		Body: <%= text_area_tag :body, nil, placeholder: "Leave a message" %>
	</div>

	<%= submit_tag "Start Conversation" %>
<% end %>